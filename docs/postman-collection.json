    {
      "name": "Cashout",
      "item": [
        {
          "name": "Setup Domain",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"groupId\": \"{{groupId}}\",\n  \"domain\": \"example.com\",\n  \"label\": \"My Domain\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cashout/setup-domain",
              "host": ["{{baseUrl}}"],
              "path": ["cashout", "setup-domain"]
            }
          },
          "response": []
        },
        {
          "name": "List Domains",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cashout/domains?groupId={{groupId}}",
              "host": ["{{baseUrl}}"],
              "path": ["cashout", "domains"],
              "query": [
                {
                  "key": "groupId",
                  "value": "{{groupId}}"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Cashout Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
